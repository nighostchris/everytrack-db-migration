{
  "compilerOptions": {
    "types": ["node"],
    "rootDir": ".",
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
